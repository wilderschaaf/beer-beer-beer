<div id='searchbar'> 
    <form action = "/bsearch/">
    		Search California Beers
    		<input type='text' name='beer'>
    		<input type="submit" value="Submit">
    </form>	
</div>

<table cladd='table-striped'>
	
	<tr>
    		<th>
    			Brewery
        	</th>
    		<th>
        		Beer
        	</th>
        	<th>
        		Style
        	</th>
        	<th>
        		ABV
        	</th>
        	<th>
        		Rating
        	</th>
    </tr>

	{{#each beers}}
    	<tr class="beer">
    		<td>
        		{{{brewery}}}
        	</td>
    		<td>
        		{{{beername}}}
        	</td>
        	<td>
        		{{{style}}}
        	</td>
        	<td>
        		{{{abv}}}
        	</td>
        	<td>
        		{{{avgrating}}}
        	</td>
    	</tr>
  	{{/each}}

</table>

	