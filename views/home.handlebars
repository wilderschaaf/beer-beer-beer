<div class='container-fluid'>
    <table class='table table-striped table-hover'>

        <thead>
        	<tr>
            		<th>
            			Brewery
                	</th>
            		<th>
                		Beer
                	</th>
                    <th>
                        State
                    </th>
                	<th>
                		Style
                	</th>
                	<th>
                		ABV
                	</th>
                	<th>
                		Rating
                	</th>
            </tr>
        </thead>
        <tbody>
        	{{#each beers}}
            	<tr class="clickable-row" data-href="/beer/{{beerid}}" data-beerid="{{beerid}}" data-style="{{style}}">
            		<td>
                		{{{brewery}}}
                	</td>
            		<td>
                		{{{beername}}}
                	</td>
                    <td>
                        {{{state}}}
                    </td>
                	<td>
                		{{{style}}}
                	</td>
                	<td>
                		{{{abv}}}
                	</td>
                	<td>
                		{{{avgrating}}}
                	</td>
            	</tr>
          	{{/each}}
        </tbody>

    </table>
</div>
