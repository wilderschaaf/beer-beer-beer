<form action = "/bsearch/">
		Search California Beers
		<input type='text' name='beer'>
		<input type="submit" value="Submit">
</form>	


<table id='beerstab'>
	
	<tr class="head" style="border: 1px solid black">
    		<th>
    			Brewery
        	</th>
    		<th>
        		Beer
        	</th>
        	<th>
        		Style
        	</th>
        	<th>
        		ABV
        	</th>
        	<th>
        		Rating
        	</th>
    	</tr>

	{{#each beers}}
    	<tr class="beer">
    		<td style="align: center; border: 1px solid black; padding: 15px">
        		{{{brewery}}}
        	</td>
    		<td style="align: center; border: 1px solid black; padding: 15px">
        		{{{beername}}}
        	</td>
        	<td style="align: center; border: 1px solid black; padding: 15px">
        		{{{style}}}
        	</td>
        	<td style="align: center; border: 1px solid black; padding: 15px">
        		{{{abv}}}
        	</td>
        	<tdstyle="align: center; border: 1px solid black; padding: 15px">
        		{{{avgrating}}}
        	</td>
    	</tr>
  	{{/each}}

</table>

	